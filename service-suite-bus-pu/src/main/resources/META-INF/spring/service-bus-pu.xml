<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:os-core="http://www.openspaces.org/schema/core"
	xsi:schemaLocation="http://www.openspaces.org/schema/core http://www.openspaces.org/schema/core/openspaces-core.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>
    <os-core:space id="space" url="/./service-bus-space" mirror="false"/>
    <os-core:giga-space id="gigaSpace" space="space"/>
    
<!--     <bean class="se.avanzabank.service.suite.context.AstrixServiceFrameworkBean"/> -->
    <bean class="se.avanzabank.service.suite.remoting.server.AstrixRemotingFrameworkBean"/>
<!--     <bean class="se.avanzabank.service.suite.context.AstrixPlugins"/> -->

	<bean id="astrixContext" class="se.avanzabank.service.suite.context.AstrixContext"/>
	<bean id="astrixPlugins" class="se.avanzabank.service.suite.context.AstrixPlugins" factory-bean="astrixContext" factory-method="getPlugins"/>
    
    <!-- weird: somehow the service-bus must export it's api... it uses a... ehh... remote-service-descriptor! -->
    <bean class="se.avanzabank.service.suite.bus.client.AstrixServiceBusApiDescriptor"/>
    
    <bean class="se.avanzabank.service.suite.bus.pu.AstrixServiceBusImpl"/>
	    
</beans>