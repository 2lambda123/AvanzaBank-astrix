<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:os-core="http://www.openspaces.org/schema/core"
	xsi:schemaLocation="http://www.openspaces.org/schema/core http://www.openspaces.org/schema/core/openspaces-core.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>
    <os-core:space id="space" url="/./service-api-consumer-space" mirror="false"/>
    <os-core:giga-space id="gigaSpace" space="space"/>
    
	<bean id="asterixServiceFrameworkBean" class="se.avanzabank.asterix.context.AsterixFrameworkBean">
		<property name="consumedAsterixBeans">
			<list>
				<value>se.avanzabank.asterix.integration.tests.domain.api.LunchService</value>
			</list>
		</property>
		<property name="serviceDescriptor" value="se.avanzabank.asterix.integration.tests.domain2.apiruntime.LunchGradeApiDescriptor"/>
	</bean>
	
	<bean id="asterixRemotingServiceExporter" class="se.avanzabank.asterix.remoting.plugin.provider.AsterixRemotingServiceRegistryExporter"/>
	<bean id="gsServiceExporter" class="se.avanzabank.asterix.gs.GigaSpaceServiceRegistryExporter"/>
	
	<bean id="spaceLocator" class="se.avanzabank.space.UsesJndiLookupSpaceLocator"/>
    <bean id="lunchRestaurantGrader" class="se.avanzabank.asterix.integration.tests.domain2.pu.LunchRestaurantGraderImpl"/>
	
	    
</beans>