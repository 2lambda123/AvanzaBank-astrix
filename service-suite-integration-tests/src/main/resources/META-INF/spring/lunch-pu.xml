<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:os-core="http://www.openspaces.org/schema/core"
	xsi:schemaLocation="http://www.openspaces.org/schema/core http://www.openspaces.org/schema/core/openspaces-core.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>
    <os-core:space id="space" url="/./service-demo-space" mirror="false"/>
    <os-core:giga-space id="gigaSpace" space="space"/>
    
    <!-- Bootstraps Astrix service provider framework -->
	<bean id="astrixServiceProviderFrameworkBean" class="se.avanzabank.service.suite.provider.context.AstrixServiceProviderFrameworkBean"/>
	
<!-- 	Service bus requires SpaceLocator to locate service bus, this dependency is implicit. -->
	<bean id="spaceLocator" class="se.avanzabank.space.UsesJndiLookupSpaceLocator"/>
	
	<!-- Bootstraps Astrix remoting framework TODO: this should not be necessary. Declaring a AstrixServiceProviderFrameworkBean should be enough -->
<!-- 	<bean id="astrixRemotingFrameworkBean" class="se.avanzabank.service.suite.remoting.server.AstrixRemotingFrameworkBean"/> -->
	
	<!-- TODO: autodiscover all ServiceExporter's? -->
	<bean id="astrixRemotingServiceExporter" class="se.avanzabank.service.suite.remoting.plugin.provider.AstrixRemotingServiceExporter"/>
	<bean id="gsServiceExporter" class="se.avanzabank.service.suite.gs.GigaSpaceServiceExporter"/>
    
    
    
    
    <!-- Api descriptor (for remoting api), contains versioning info, maybe it should be a property on AstrixServiceProviderFrameworkBean? -->
    <bean id="lunchApiDescriptor" class="se.avanzabank.service.suite.integration.tests.domain.apiruntime.LunchApiDescriptor"/>
    
	<!-- The actual service implementation(s) -->
    <bean id="lunchService" class="se.avanzabank.service.suite.integration.tests.domain.pu.LunchServiceImpl"/>
	
	    
</beans>